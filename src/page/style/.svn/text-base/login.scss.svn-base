.logins{
  width: 100%;height:64vh;background:url("../../assets/img/lunbo1.png");position: relative;
  .login_box{width: 410px;right: 289px;top:6%;background: #fff;position: absolute;padding: 15px 37px;opacity: 0.9;border-radius: 12px;
    z-index: 10;
    .logo{margin-bottom: 35px !important;text-align: center;font-size: 24px;color: #666}
  }
  .login_input>div{
    border-radius: 40px;
    width: 330px;height: 40px;background: #fff;margin-top: 12px !important;
    img{
      width: 20px;height: 24px;margin: 10px !important;
      margin-right: 0 !important;
      margin-left: 5px;
    }
    input{
      border: 0;
    }
  }
}
.class-a{
  border:1px solid #00C9A1;
}
.class-b{
  border:1px solid #ccc;
}
input{outline:none;height: 32px;border: 0;margin-top: 2px !important;
  text-indent: 10px !important;
}
.remember{
  width: 330px;
  font-size: 16px;
  text-align: center;
  color: #333333;
  background: #fff !important;
  span{
    color: #666666;
    font-size: 12px;
  }
  b{
    display: inline;
    width: 1px;
    height: 10px;
    border-right: 1px solid #666666;
    margin: 0 30px;
  }
}
button{
  width: 330px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  color: #fff;
  background: #00C9A1;
  padding: 0;
  border: 0;
  outline: none;
  border-radius: 100px;
  margin-top: 0px !important;
  margin-bottom: 15px !important;
}
h2{
  color: #00C9A1;
  font-size: 24px;
  text-align: center;
  margin-bottom: 15px !important;
}
.registe{
  text-align: center;
  font-size: 16px;
  color: #333333;
  span{
    color: #00C9A1;
  }
}
.send_code{
  position: relative;
  background: #fff !important;
  span{
    position: absolute;
    bottom: -5px;
    right: 0;
    font-size: 10px;
    color: #666666;
    border-bottom: 1px solid #666666;
  }
}
.last{background: #fff !important;}
.code{
  display: inline-block;background: #fff;height: 40px;width: 184px;
  input{width: 120px !important;}
}
img.send{
  position: absolute;
  top: -9px;
  width: 104px !important;
  height: 42px !important;
  padding: 0 !important;
  margin: 0 !important;
}
.send_codes{
  background: #fff !important;
  .codes{
    display: inline-block;background: #fff;height: 40px;width: 219px;
    border-top-left-radius:40px;
    border-bottom-left-radius:40px;
  }
  input{width: 150px !important;}
}
.sends{
  font-size: 14px;
  border-radius: 3px;
  width: 104px !important;
  margin: 0 !important;
  background: white;
  border: 1px solid #CCCCCC;
  color: #00C9A1;
  border-top-right-radius:40px;
  border-bottom-right-radius:40px;
  margin-top: -5px !important;
}
span,button{cursor:pointer}
